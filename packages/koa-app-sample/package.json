{
  "name": "koa-app-sample",
  "private": true,
  "version": "1.4.1",
  "description": "Koa sample",
  "scripts": {
    "start": "egg-scripts start --daemon --title=my-midway-project --framework=@midwayjs/web",
    "stop": "egg-scripts stop --title=my-midway-project",
    "start_build": "yarn build && cross-env NODE_ENV=development midway-bin dev",
    "dev": "cross-env ets && cross-env NODE_ENV=local midway-bin dev --ts",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "cov": "midway-bin cov",
    "lint": "mwts check",
    "lint:fix": "mwts fix",
    "ci": "yarn cov",
    "build": "midway-bin build -c"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn build && yarn test"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@midwayjs/core": "^2.12.1",
    "@midwayjs/decorator": "^2.11.5",
    "@midwayjs/koa": "^2.12.1",
    "apollo-server-koa": "^3.1.1",
    "apollo-server-midway": "^1.2.0",
    "apollo-server-plugin-base": "^3.1.1",
    "compression": "^1.7.4",
    "dataloader": "^2.0.0",
    "dateformat": "^4.5.1",
    "dotenv": "^10.0.0",
    "egg": "^2.29.4",
    "egg-scripts": "^2.14.0",
    "graphql": "^15.5.1",
    "lodash": "^4.17.21",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@midwayjs/cli": "^1.2.77",
    "@midwayjs/egg-ts-helper": "^1.2.0",
    "@midwayjs/luckyeye": "^1.0.2",
    "@midwayjs/mock": "^2.12.1",
    "@types/cross-spawn": "^6.0.2",
    "@types/jest": "^26.0.24",
    "mwts": "^1.2.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "midway-bin-clean": [
    ".vscode/.tsbuildinfo",
    "dist"
  ],
  "midway-luckyeye": {
    "packages": [
      "midway_v2"
    ]
  },
  "author": "linbudu599",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/linbudu599/apollo-server-midway/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linbudu599/apollo-server-midway.git"
  }
}
